{
    "name": "phoenix/adjudication",
    "description": "PHOENIX Pharmacogenomic Trial Adjudication System",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Phoenix\\": "inc/classes/",
            "Phoenix\\Tests\\": "tests/"
        },
        "files": [
            "inc/helpers.php"
        ]
    },
    "scripts": {
        "test": "phpunit tests/",
        "test-phase": [
            "@php tests/phase1_test.php",
            "@php tests/phase2_test.php",
            "@php tests/phase3_test.php"
        ],
        "analyze": "phpstan analyse inc/ public/ api/ -l 5",
        "migrate": "php scripts/run_migrations.php",
        "import-ctcae": "php scripts/import_ctcae_v6.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
